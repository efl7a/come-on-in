<%= form_for study_session do |f| %>
  <%= f.label :subject %>
  <%= f.select :subject, subjects.map {|subject| subject} %>
  <br><br>
  <%= f.label :grade %>
  <%= f.select :grade, [6, 7, 8] %>
  <br><br>
  <%= f.label :content, "Purpose of study session:" %>
  <%= f.text_field :content %>
  <br><br>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br><br>
  <%= f.label :time %>
  <%= f.text_field :time, :value => study_session.time.strftime('%H:%M') %>
  <br><br>
  <%= f.submit "Create Study Session" %>
<% end %>
