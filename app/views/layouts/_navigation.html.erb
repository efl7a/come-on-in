<%= link_to "Home", root_path, class: 'btn btn-primary' %>
<br><br>
<% if current_user %>
  <% if current_user.admin? %>
    <%= link_to "Admin Home", admin_index_path, class: 'btn btn-primary' %>
  <% elsif current_user.teacher? %>
    <%= link_to "Your Study Sessions", user_study_sessions_path(current_user), class: 'btn btn-primary' %><br><br>
    <%= link_to "Create New Study Session", new_study_session_path, class: 'btn btn-primary' %><br><br>
  <% else %>
    <%= link_to "Your Study Sessions", user_attendees_path(current_user), class: 'btn btn-primary' %><br><br>
    <%= link_to "Available Study Sessions", study_sessions_path, class: 'btn btn-primary' %>
  <% end %><br><br>
  <%= link_to "Sign Out",  destroy_user_session_path, :method => 'delete', class: 'btn btn-primary' %>
<% else %>
  <%= link_to "Sign In", user_session_path, class: 'btn btn-primary' %>
  <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary' %>
<% end %>
